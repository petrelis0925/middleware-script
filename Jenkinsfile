pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                sleep 5
            }
        }
        stage('Build') {
            steps {
                echo 'Build'
                sleep 5
            }
        }
        stage('Test') {
            steps {
                echo 'Test'
                sleep 5
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy'
                sleep 5
            }
        }
    }
}
